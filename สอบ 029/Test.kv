<HomeScreen>:
    canvas.before:
        Color:
            rgba: 0.7, 0.5, 0.8, 1
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        padding: 20

        Button:
            text: 'เข้าสู่ระบบ'
            color: 0, 0, 0, 1
            font_size: 30
            font_name:"tahoma"
            background_color:255,255,0
        Button:
            text: 'ลงทะเบียนใหม่'
            font_size: 30
            font_name:"tahoma"
            background_color: 0.5, 0, 1, 1
            on_release: app.root.current = 'register'
        Button:
            text: 'For Foreignner'
            font_size: 30
            background_color:0, 0, 1, 1 

<RegisterScreen>:
    canvas.before:
        Color:
            rgba: 0.7, 0.5, 0.8, 1 
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: 'vertical'
        padding: 20

        Label:
            text: 'ระบบการอบรมใบอนุญาตขับรถ'
            color: 0, 0, 0, 1
            font_size: 40
            font_name:"tahoma"
        Label:
            text: 'ลงทะเบียนเข้ารับการอบรม'
            color: 0, 0, 0, 1
            font_size: 20
            font_name:"tahoma"
        TextInput:
            id: id_card_input
            hint_text: 'ระบุเลขบัตรประชาชน'
            font_size: 20
            font_name:"tahoma"
        TextInput:
            id: id2_card_input
            hint_text: 'ระบุเลขบัตรประชาชนอีกครั้ง'
            font_size: 20
            font_name:"tahoma"
        TextInput:
            id: phone_number_input
            hint_text: 'ระบุเบอร์เบอร์โทรศัพท์'
            font_size: 20
            font_name:"tahoma"
        TextInput:
            id: email_input
            hint_text: 'ระบุอีเมล'
            font_size: 20
            font_name:"tahoma"
        Label:
            text: 'กรุณาระบุ วันเดือนปี พ.ศ. เกิดให้ถูกต้อง'
            color: 1, 0, 0, 1
            font_size: 40
            font_name:"tahoma"
        TextInput:
            id: dey_input
            hint_text: 'วัน'
            font_size: 20
            font_name:"tahoma"
        TextInput:
            id: month_input
            hint_text: 'เดือน'
            font_size: 20
            font_name:"tahoma"
        TextInput:
            id: year_input
            hint_text: 'ปี'
            font_size: 20
            font_name:"tahoma"
        Label:
        Button:
            id: btn_regis
            text: 'ดำเนินการต่อ'
            font_name:"tahoma"
            background_color: 0.5, 0, 1, 1
            on_release: root.check_data()

<SecondScreen>:
    canvas.before:
        Color:
            rgba: 0.7, 0.5, 0.8, 1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: 'vertical'
        padding: 20

        Label:
            text: 'หน้าที่สอง'
            font_size: 20
