<UI>:
    id:scr_manager   #
    Scr_knowledge:
    Scr_bmi:


    #หน้า2
<Scr_bmi>:
    name: "Scr_bmi"
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: txt_weight
            hint_text: "input weight"
            readonly: True
        Slider:
            id: slider_weight
            min:30
            max:100
            step:0.5
            set:40
            on_value: txt_weight.text=str(slider_weight.value)
        TextInput:
            id: txt_height
            hint_text: "input height"
        Slider:
            id: slider_height
            min:100
            max:200
            step:0.5
            set:40
            on_value: txt_height.text=str(slider_height.value)
        Button:
            id: "btn_bmi"
            on_press: root.cal_bmi()    #ผูกฟังก์ชั่น cal_bmi ไม่ส่งค่าใดๆ          #คราสสกรีน bmi
            background_color:"green"
        Label:
            id: lbl_bmi
            text: 'bmi = '
        Image:
            id: img_bmi
#หน้าที่ 1
<Scr_knowledge>:
    name: "Scr_knowledge"
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: "b.jpg"
        Button:
            text:"คำนวณ"
            font_name:"tahoma"
            size_hint:0.50, 0.10
            pos_hint: {'x': 0.25,'y': 0.25}
            on_press: app.root.current = "Scr_bmi"  #แสดงหน้าปัจจุบัน