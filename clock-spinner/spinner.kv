<UI>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:          ######ส่วนบน
            Spinner:
                id: spin_lang
                text: "please select"
                values: ("Python", "php", "html", "sql")
                size_hint:(0.4,0.2)
                pos_hint:{'top':1}
            Label:
                id: lbl_output
                text:"you selected : {}".format(spin_lang.text)

        BoxLayout:          ######ส่วนล่าง
            Label:
                text:"add item"
            TextInput:
                id: txt_input
            Button:
                text:'add item'
                on_press: root.add_item()