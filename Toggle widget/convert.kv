<UI>:
    id:scr_manager
    Scr1:
    Scr2:
    
#---------- ui หน้า1 ----------#
<Scr1>:
    name: "Scr1"
    canvas.before:
        Rectangle:
            source:"1.jpg"
            size:root.width,root.height
            pos:self.pos
    Button:
        text: "แปลงเลขฐาน"
        font_name: "tahoma"
        pos_hint:{'canter_x':0.25,'canter_y':0.25}
        size_hint: 1,0.1
        background_color:"green"
        on_press: app.root.current="Scr2"
    

#---------- ui หน้า2 ----------#
<Scr2>:
    name: "Scr2"
    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: txt_number
        BoxLayout:
            ToggleButton:
                text: "base2"  
                group:'convert_mode'
                on_press: root.convert(*args)
            ToggleButton:
                text: "base8"  
                group:"convert_mode" 
                on_press: root.convert(*args)
            ToggleButton:
                text: "base16"  
                group:"convert_mode" 
                on_press: root.convert(*args)

        Button:
            text: "convert"
            on_press: root.convert()
        Label:
            id: lbl_output

<ToggleButton@ToggleButton>:
    font_name: 'tahoma'
